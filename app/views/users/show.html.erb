<div class="col-md-6 mx-auto text-center">
  <h1>
    Events Created By <%= @user.name %>
  </h1>

  <%= link_to 'Create New Event', new_event_path, class: 'btn btn-primary mt-3' %>

  <%= link_to 'View All Events', events_path, class: 'btn btn-primary mt-3 ml-2' %>

  <%= user_created_events(@user) %>

  <h2>
    Events that <%= @user.name %> will be attending
  </h2>

  <ul class="list-group">
    <li class="list-group-item font-weight-bold">
      Event List!
    </li>
    <% @user.attended_events.each do |event| %>
      <li class="list-group-item">
        <%= event.event_name %>
      </li>
    <% end %>
  </ul>

</div>