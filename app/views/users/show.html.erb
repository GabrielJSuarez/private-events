<div class="text-center my-3">
  <h1>
    <%= @user.name %>'s Event page
  </h1>

  <%= link_to 'Create New Event', new_event_path, class: 'btn btn-success mt-3' %>

  <%= link_to 'View All Events', events_path, class: 'btn btn-primary mt-3 ml-2' %>
</div>

<div class="row mx-3">
  <div class="col-md-6 mx-auto text-center">
    <h2>
      Host
    </h2>
    <%= user_created_events(@user) %>
  </div>

  <div class="col-md-6 mx-auto text-center">
    <h2>
      Attendee
    </h2>
    <%= user_attended_events(@user) %>
  </div>
</div>