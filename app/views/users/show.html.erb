<div class="text-center my-3">
  <h1>
    <%= @user.name %>'s Event page
  </h1>

  <%= link_to 'Create New Event', new_event_path, class: 'btn btn-success mt-3' %>

  <%= link_to 'View All Events', events_path, class: 'btn btn-primary mt-3 ml-2' %>
</div>

<div class="row mx-3">
  <div class="col-md-6 mx-auto text-center">
    <h2>
      Host
    </h2>
    <div class="row">
      <div class="col-6">
        <h3>
          Past Events
        </h3>
        <%= show_events(@user_past_events_host, 'danger') %>
      </div>
      <div class="col-6">
        <h3>
          Upcoming Events
        </h3>
        <%= show_events(@user_upcoming_events_host, 'success') %>
      </div>
    </div>

  </div>

  <div class="col-md-6 mx-auto text-center">
    <h2>
      Attendee
    </h2>
    <div class="row">
      <div class="col-6">
        <h3>
          Past Events
        </h3>
        <%= show_events(@user_past_events_attendee, 'danger') %>
      </div>
      <div class="col-6">
        <h3>
          Upcoming Events
        </h3>
        <%= show_events(@user_upcoming_events_attendee, 'success') %>
      </div>
    </div>
  </div>
</div>