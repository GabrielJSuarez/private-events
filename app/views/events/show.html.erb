<div class="col-md-6 mx-auto text-center mt-3">
  <%= render 'events/event' %>

  <%= link_to 'Assist to this event', new_attendance_path, class: 'btn btn-success' %>

  <%= link_to 'View all users events', user_path(@event.creator), class: 'btn btn-primary my-5' %>

  <ul class="list-group">
    <li class="list-group-item font-weight-bold">
      Attendance List!
    </li>
    <% @event.attendees.each do |person| %>
      <li class="list-group-item">
        <%= person.name %>
      </li>
    <% end %>
  </ul>
</div>